{
  "compilerOptions": {
    "target": "es6",
    "lib": [ "ES2022" ],
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "typeRoots": [
      "typings",
      "node_modules/@types"
    ]
  },
    "include": ["src"],
    "exclude": ["node_modules"]
}