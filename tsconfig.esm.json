{
    "compilerOptions": {
        "moduleResolution": "node",
        "target": "esnext",
        "lib": ["dom", "DOM.Iterable", "ES2022"],
        "module": "esnext",
        "declaration": true,
        "removeComments": true,
        "outDir": "dist/esm",
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "typeRoots": ["typings", "node_modules/@types"]
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}
